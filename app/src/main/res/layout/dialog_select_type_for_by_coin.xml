<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DialogFragment.SelectTypeForByCoinDialog">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_pay"
        android:textColor="#000"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_payment_coin_by_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/txt_type_payment_coin_by_coin" />

        <RadioButton
            android:id="@+id/radio_payment_coin_by_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_type_payment_coin_by_pack" />

        <RadioButton
            android:id="@+id/radio_payment_coin_by_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_type_payment_coin_by_qr" />

    </RadioGroup>

    <TextView
        android:id="@+id/txt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_alignParentEnd="true"
        android:text="@string/cancel" />

    <TextView
        android:id="@+id/txt_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@id/txt_cancel"
        android:text="@string/ok" />

</RelativeLayout>