<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/txt_coin_pack_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/kanit_medium"
            android:text="Coin Package"
            android:textColor="@color/txt_color_all"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_coin_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_coin_pack_name"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_coin" />

        <TextView
            android:id="@+id/txt_coin_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_below="@id/txt_coin_pack_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/kanit_medium"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/select_calendar"
            android:textSize="54sp" />

        <TextView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txt_coin_large"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/txt_coin_pack_price_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/kanit_medium"
            android:text="@string/price"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_coin_pack_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/txt_coin_pack_price_show"
            android:fontFamily="@font/kanit_medium"
            android:text="100"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/txt_coin_pack_price"
            android:fontFamily="@font/kanit_medium"
            android:text=".-"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txt_coin_pack_coin_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_coin_pack_price"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/kanit_medium"
            android:text="รับ Coin "
            android:textColor="@color/select_calendar"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_coin_pack_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_coin_pack_price"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/txt_coin_pack_coin_show"
            android:fontFamily="@font/kanit_medium"
            android:text="100"
            android:textColor="@color/select_calendar"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_coin_pack_price"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/txt_coin_pack_coin"
            android:fontFamily="@font/kanit_medium"
            android:text="Coin"
            android:textColor="@color/select_calendar"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_coin_pack_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>