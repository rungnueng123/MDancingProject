<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/img_course_home"
                android:layout_width="160dp"
                android:layout_height="86dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txt_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_regular"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/img_course_home"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/course" />

            <TextView
                android:id="@+id/txt_course_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_course_name"
                android:fontFamily="@font/kanit_regular"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/img_course_home"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/style" />

            <TextView
                android:id="@+id/txt_course_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_course_style"
                android:fontFamily="@font/kanit_regular"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/img_course_home"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/description" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>