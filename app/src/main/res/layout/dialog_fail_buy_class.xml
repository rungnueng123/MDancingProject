<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    tools:context=".DialogFragment.FailBuyClassDialog">

    <ImageView
        android:id="@+id/img_fail"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="57dp"
        android:src="@drawable/ic_fail"/>

    <TextView
        android:id="@+id/txt_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_fail"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/kanit_medium"
        android:textSize="24sp"
        android:text="@string/txt_payment_class_fail"/>

    <TextView
        android:id="@+id/txt_fail_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_fail"
        android:layout_marginTop="11dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/kanit_regular"
        android:textSize="14sp"
        android:text="@string/txt_payment_fail_detail"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/txt_fail_detail"
        android:background="@drawable/shapelogin"
        android:fontFamily="@font/kanit_medium"
        android:shadowColor="@android:color/transparent"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>